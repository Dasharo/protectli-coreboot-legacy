if BOARD_PROTECTLI_FW6 || BOARD_PROTECTLI_FW6D

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select BOARD_ROMSIZE_KB_8192
	select HAVE_ACPI_RESUME
	select HAVE_ACPI_TABLES
	select INTEL_GMA_HAVE_VBT
	select MAINBOARD_HAS_LIBGFXINIT
	select SEABIOS_ADD_SERCON_PORT_FILE if PAYLOAD_SEABIOS
	select SOC_INTEL_KABYLAKE
	select SPI_FLASH_MACRONIX
	select SUPERIO_ITE_IT8772F if BOARD_PROTECTLI_FW6
	select SUPERIO_ITE_IT8613E if BOARD_PROTECTLI_FW6D
	select MAINBOARD_HAS_CRB_TPM
	select HAVE_INTEL_PTT
	select TPM2

config IRQ_SLOT_COUNT
	int
	default 18

config MAINBOARD_DIR
	string
	default "protectli/vault_kbl"

config VARIANT_DIR
	string
	default	"fw6d" if BOARD_PROTECTLI_FW6D

config MAINBOARD_PART_NUMBER
	string
	default "FW6"

config MAINBOARD_FAMILY
	string
	default "Protectli_FW6"

config DIMM_MAX
	int
	default 2

config DIMM_SPD_SIZE
	int
	default 512

config MAX_CPUS
	int
	default 4 if BOARD_PROTECTLI_FW6
	default 8 if BOARD_PROTECTLI_FW6D

config DEVICETREE
	string
	default "variants/baseboard/devicetree.cb"

config OVERRIDE_DEVICETREE
	string
	default	"variants/$(CONFIG_VARIANT_DIR)/overridetree.cb"

config VGA_BIOS_ID
	string
	default "8086,5916" if BOARD_PROTECTLI_FW6 # 8086,5906 for FW6A
	default "8086,5917" if BOARD_PROTECTLI_FW6D

config PXE_ROM_ID
	string
	default "8086,150c" if BOARD_PROTECTLI_FW6
	default "8086,1539" if BOARD_PROTECTLI_FW6D

config CBFS_SIZE
	hex
	default 0x600000

config USE_PM_ACPI_TIMER
	default n	if BOARD_PROTECTLI_FW6D

endif
